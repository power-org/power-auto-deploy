[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
charset = utf-8
indent_size = 2
indent_style = space
tab_width = 2

[*.scss]
charset = utf-8
indent_size = 2
indent_style = space
tab_width = 2

[*.html]
charset = utf-8
indent_size = 4
indent_style = space
tab_width = 2

[package.json]
indent_style = tab
indent_size = 4
